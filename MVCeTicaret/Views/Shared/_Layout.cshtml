<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <style>

        #myBtn {
            display: none;
            position: fixed;
            bottom: 20px;
            right: 30px;
            z-index: 99;
            font-size: 18px;
            border: none;
            outline: none;
            background-color: red;
            color: white;
            cursor: pointer;
            padding: 15px;
            border-radius: 4px;
        }

            #myBtn:hover {
                background-color: #555;
            }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:darkorange;">
        <div class="container">
            <div class="navbar-header" >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ana Sayfa", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("KADIN", "Product", "Product", new { id = 1 }, new { @class = "navbar-brand" })
                @Html.ActionLink("ERKEK", "Product", "Product", new { id = 2 }, new { @class = "navbar-brand" })
                @Html.ActionLink("ÇOCUK", "Product", "Product", new { id = 3 }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">

                    @{
                        if (Session["OnlineKullanici"] == null)
                        {
                            <li>
                                @Html.ActionLink("Üye ol", "Register", "Login")
                            </li>
                            <li>
                                @Html.ActionLink("Giriş Yap", "Login", "Login")
                            </li>
                            }
                            else
                            {
                                var db = new MVCeTicaret.Models.Context();
                            <li>
                              
                               <a href="@Url.Action("Cart","Shopping")">Sepetiniz
                                <span class="badge">@db.OrderDetails.Where(x => x.IsCompleted == false && x.CustomerID == MVCeTicaret.Models.TemporaryUserData.UserID).ToList().Count
                                     </span>
                                </a>
                            </li>
                            <li>
                              
                                <a href="@Url.Action("Wishlist","Shopping")">İstek Listeniz 
                                <span class="badge">@db.Wishlists.Where(x => x.IsActive == true && x.CustomerID == MVCeTicaret.Models.TemporaryUserData.UserID).ToList().Count
                                   </span></a>
                            </li>
                            <li>
                                @*//TODO: kullanıcının profil Güncelleme sayfası hazırlanacak *@
                                @Html.ActionLink(Session["OnlineKullanici"].ToString(), "UpdateProfile", "Profile")
                            </li>
                            <li>
                                @Html.ActionLink("Çıkış Yap", "Logout", "Login")
                            </li>
                        }
                    }
                </ul>

            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

        <button onclick="topFunction()" id="myBtn" title="Go to top">
            <span class="glyphicon glyphicon-menu-up"></span>
        </button>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script>
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                document.getElementById("myBtn").style.display = "block";
            } else {
                document.getElementById("myBtn").style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0; // For Safari
            document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
        }
    </script>

    @RenderSection("scripts", false)
</body>
</html>